<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/slideRelativeLayout">

    <ImageView
        android:id="@+id/slideImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/slideTitleTextView"
        android:paddingTop="@dimen/lay_72"
        android:paddingLeft="@dimen/lay_72"
        android:paddingRight="@dimen/lay_72"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/slideTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/slideContentTextView"
        android:layout_alignLeft="@+id/slideContentTextView"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="I am title" />

    <TextView
        android:id="@+id/slideContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:lineSpacingExtra="5.5dp"
        android:textSize="@dimen/font_16"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="I am content"/>

</RelativeLayout>