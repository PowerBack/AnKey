<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/dark_dark"
    android:gravity="center"
    android:padding="@dimen/lay_16"
    tools:context=".ui.activity.KeyVerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64"
        android:layout_marginBottom="@dimen/size_172"
        android:background="@drawable/ic_btn_bg_round_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/lay_16">

        <EditText
            android:id="@+id/edit_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/label_key_enter"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/lay_20"
            android:paddingLeft="@dimen/lay_16"
            android:paddingRight="@dimen/lay_16"
            android:paddingTop="@dimen/lay_20"
            android:textColor="@color/white"
            android:textColorHint="@color/white_alpha_224"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_alpha_224" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/size_76"
            android:layout_height="@dimen/size_64"
            android:background="@null"
            android:gravity="center"
            android:text="GO"
            android:textColor="@color/white_alpha_224"
            android:textSize="@dimen/font_18"
            app:gTouchColor="@color/white_alpha_96"
            app:gTouchCornerRadiusBR="@dimen/size_32"
            app:gTouchCornerRadiusTR="@dimen/size_32"
            app:gTouchEffect="ripple" />
    </LinearLayout>


</RelativeLayout>
