<resources>

    <style name="AppTheme.AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowAnimationStyle.Activity
        </item>

        <!-- In this custom widget style -->
        <item name="gTextViewStyle">@style/Genius.Widget.TextView</item>
        <item name="gButtonStyle">@style/Genius.Widget.Button</item>
        <item name="gFloatActionButtonStyle">@style/Genius.Widget.FloatActionButton</item>
        <item name="gSeekBarStyle">@style/Genius.Widget.SeekBar</item>
        <item name="gCheckBoxStyle">@style/Genius.Widget.CompoundButton.CheckBox</item>
        <item name="gEditTextStyle">@style/Genius.Widget.EditText</item>
        <item name="gLoadingStyle">@style/Genius.Widget.Loading</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="AppTheme.AppCompat">
        <item name="actionBarSize">@dimen/toolBar_height</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorTertiary">@color/textColorTertiary</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/AppTheme.Base.ToolBar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.AppCompat.Toolbar.Button.Navigation
        </item>
        <!--<item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>-->
    </style>

    <style name="AppTheme.Base.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <!--<item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>-->
        <!--<item name="android:textColorPrimaryDisableOnly">-->
        <!--@color/abc_primary_text_disable_only_material_dark-->
        <!--</item>-->
        <!--<item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_light-->
        <!--</item>-->
        <!--<item name="android:textColorTertiary">@color/abc_secondary_text_material_dark</item>-->
        <!--<item name="android:textColorTertiaryInverse">@color/abc_secondary_text_material_light-->
        <!--</item>-->
        <!--<item name="android:textColorHint">@color/hint_foreground_material_dark</item>-->
        <!--<item name="android:textColorHintInverse">@color/hint_foreground_material_light</item>-->
        <!--<item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolBar_height</item>
        <item name="android:height">@dimen/toolBar_height</item>

        <item name="android:textAppearance">@style/AppTheme.Base.ToolBar.TitleTextAppearance</item>
        <item name="titleTextAppearance">@style/AppTheme.Base.ToolBar.TitleTextAppearance</item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
        <item name="android:minHeight">@dimen/toolBar_height</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <!--<item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>-->
        <item name="contentInsetStart">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Base.ToolBar.TitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="Theme.Dialog.Base" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white_alpha_240</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.Dialog.Base">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>

        <item name="android:windowAnimationStyle">@style/AppTheme.WindowAnimationStyle.Dialog</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>

    </style>

    <style name="AppTheme.WindowAnimationStyle.Dialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>

    <style name="AppTheme.WindowAnimationStyle.Activity" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_extra_to_next_open_enter
        </item>
        <item name="android:activityOpenExitAnimation">@anim/activity_extra_to_next_open_exit
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_extra_to_next_close_enter
        </item>
        <item name="android:activityCloseExitAnimation">@anim/activity_extra_to_next_close_exit
        </item>
    </style>

    <style name="AppTheme.WindowAnimationStyle.Activity.Search" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/search_activity_open_enter_alpha
        </item>
        <item name="android:activityOpenExitAnimation">@anim/search_activity_open_exit_alpha
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/search_activity_close_enter_alpha
        </item>
        <item name="android:activityCloseExitAnimation">@anim/search_activity_close_exit_alpha
        </item>
    </style>


    <style name="AppTheme.WindowAnimationStyle.Wallpaper" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/wallpaper_intra_open_enter
        </item>
        <item name="android:activityOpenExitAnimation">@anim/wallpaper_intra_open_exit
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/wallpaper_intra_close_enter
        </item>
        <item name="android:activityCloseExitAnimation">@anim/wallpaper_intra_close_exit
        </item>
    </style>


    <style name="AppTheme.WindowAnimationStyle.Fragment" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/support_fragment_open_enter
        </item>
        <item name="android:activityOpenExitAnimation">@anim/support_fragment_open_exit
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/support_fragment_close_enter
        </item>
        <item name="android:activityCloseExitAnimation">@anim/support_fragment_close_exit
        </item>
    </style>

    <style name="AppTheme.WindowAnimationStyle.Overflow" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/overflow_popup_enter
        </item>
        <item name="android:activityOpenExitAnimation">@anim/overflow_popup_enter_split
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/overflow_popup_exit_split
        </item>
        <item name="android:activityCloseExitAnimation">@anim/overflow_popup_exit
        </item>
    </style>

</resources>
